# i3status configuration file.

general {
	output_format = "none"
	interval      = 5
	separator     = " "
}

order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "volume master"
order += "tztime local"

cpu_usage {
	format = "| %usage |"
}

memory {
	format = "| %used |"
}

battery 0 {
	integer_battery_capacity = true
	format = "| %percentage |"
}

volume master {
	format = "| %volume |"
}

tztime local {
	format = "| %a %b %d  || %H:%M  |"
}
